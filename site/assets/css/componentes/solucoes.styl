.solucoes
    margin 1em auto
    width 62%
        
    a 
        border 1px solid #eee 
        border-radius 50%
        box-shadow 1px 1px 6px 0px rgba(51, 51, 51, 0.18823529411764706)
        display block
        height 200px
        margin-top 28px
        padding 52px 0
        text-decoration none
        width 200px
        transition 1s linear background
        img 
            width 50%
    @media(min-width: 760px)
        width 99%
        a 
            display inline-block
            margin 5px 10px
            padding 40px
            img 
                width 112px
                