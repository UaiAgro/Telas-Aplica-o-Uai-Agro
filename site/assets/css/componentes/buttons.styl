.bt
    box-shadow 1px 2px 3px 0px rgba(51, 51, 51, 0.29)
    border-radius 5px
    border-style solid
    border-width 1px
    color #fff 
    font-size 0.90em
    font-family arial
    font-weight 600
    margin-top 20px
    padding 1em
    text-decoration none
    &.bt-green 
        background-color #4caf50
        border-color #4caf50
    &.bt-clean
        background-color transparent
        border-color #fff 
        transition 1s linear background
        &:hover
            background #fff
            color #8bc34a